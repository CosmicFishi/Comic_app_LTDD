<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- profile picture -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_margin="30dp"
                android:background="@drawable/border_radius"
                app:srcCompat="@drawable/ic_baseline_profile"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/uName"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txt_u_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txt_u_phone"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not set"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/uEmail"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txt_u_email"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sample@gmail.com"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:text="@string/uNumFav"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_u_num_fav"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_move_fav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách yêu thích"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:drawableTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_favorite"
                    android:paddingVertical="20dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/main_button_shape"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">
                        <Button
                            android:layout_marginRight="40dp"
                              android:layout_marginTop="20dp"
                            android:id="@+id/btn_move_settings"
                            android:layout_width="140dp"

                            android:layout_marginTop="20dp"
                            android:id="@+id/btn_move_settings"
                            android:layout_width="150dp"

                            android:layout_height="60dp"
                            android:text="Cài đặt"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:drawableTint="@color/white"
                            android:paddingVertical="15dp"
                            app:backgroundTint="@null"
                            android:background="@drawable/main_button_shape"/>
                        <Button

                            android:layout_marginTop="20dp"
                            android:layout_height="60dp"
                            android:id="@+id/btn_log_out"
                            android:layout_width="140dp"

                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="60dp"
                            android:id="@+id/btn_log_out"
                            android:layout_width="150dp"
                            android:text="Đăng xuất"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:drawableTint="@color/white"
                            android:paddingVertical="15dp"
                            app:backgroundTint="@null"
                            android:background="@drawable/main_button_shape"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>