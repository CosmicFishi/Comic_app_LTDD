<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/topView"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:background="#53D2DB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView1"
                android:layout_width="74dp"
                android:layout_height="67dp"
                android:scaleType="centerInside"
                android:src="@drawable/avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/Vien"
                app:layout_constraintHorizontal_bias="0.089"
                app:layout_constraintStart_toStartOf="@id/topView"
                app:layout_constraintTop_toTopOf="@id/topView"
                app:layout_constraintVertical_bias="0.229"
                app:riv_border_color="#53D2DB"
                app:riv_border_width="2dip"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:shadowColor="#3C3F41"
                android:text="@string/hi_y_n"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/Vien"
                app:layout_constraintHorizontal_bias="0.328"
                app:layout_constraintStart_toStartOf="@id/topView"
                app:layout_constraintTop_toTopOf="@id/topView"
                app:layout_constraintVertical_bias="0.268" />

            <View
                android:id="@+id/Vien"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/ic_home1"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/topView"
                app:layout_constraintEnd_toEndOf="@id/topView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/topView"
                app:layout_constraintTop_toTopOf="@id/topView">

            </View>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imagebanner"
                android:layout_width="350dp"
                android:layout_height="160dp"
                android:scaleType="center"
                android:src="@drawable/vbw1613995052"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topView"
                app:layout_constraintVertical_bias="0.0"
                app:riv_border_color="#53D2DB"
                app:riv_corner_radius="30dip" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:shadowColor="#3C3F41"
            android:text="Category"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/home_button_cate1"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="Action"
                    android:textSize="15dp"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/home_button_cate2"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="Action"
                    android:textSize="16dp"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/home_button_cate3"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="Action"
                    android:textSize="16dp"
                    app:backgroundTint="@null" />
             </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:shadowColor="#3C3F41"
            android:text="News"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="25sp" />

    </LinearLayout>

</ScrollView>