<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#53D2DB"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="COMIC IT"
        android:textAlignment="center"
        android:textColor="#FDD7AD"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="702dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_radius_login"
        android:gravity="center"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="28dp"
           android:gravity="center"
           android:orientation="horizontal"
           android:id="@+id/viewLogin"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="1.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <Button
               android:id="@+id/btnSignUpView"
               android:layout_width="120dp"
               android:layout_height="50dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginRight="50dp"
               android:background="@drawable/bt_line_border"
                android:gravity="center"
               android:text="Sign Up"
               android:textColor="#AEA8A8"
               android:textSize="18dp"
               app:backgroundTint="@null" />

           <Button
               android:id="@+id/btnLoginView"
               android:layout_width="120dp"
               android:layout_height="50dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/bt_line_border"
               android:drawableTint="@color/white"
               android:gravity="center"
               android:text="Login"
               android:textColor="#AEA8A8"
               android:textSize="18dp"
               app:backgroundTint="@null" />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="70dp"
           android:gravity="center"
           android:orientation="vertical"
           android:paddingLeft="30dp"
           android:paddingRight="30dp"
           app:layout_constraintEnd_toEndOf="@id/viewLogin"
           app:layout_constraintHorizontal_bias="1.0"
           app:layout_constraintStart_toStartOf="@id/viewLogin"
           app:layout_constraintTop_toTopOf="@id/viewLogin">

           <EditText
               android:id="@+id/editTextDisplayName"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:background="@drawable/txt_border"
               android:hint="Yours name"
               android:textColor="@color/black" />

           <EditText
               android:id="@+id/editTextPhone"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:background="@drawable/txt_border"
               android:hint="Phone"
               android:textColor="@color/black"  />

           <EditText
               android:id="@+id/editTextUserName"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:background="@drawable/txt_border"
               android:hint="Email"
               android:textColor="@color/black"  />

           <EditText
               android:id="@+id/editTextTextPassword"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:background="@drawable/txt_border"
               android:hint="Password"
               android:inputType="textPassword"
               android:textColor="@color/black"  />

           <EditText
               android:id="@+id/editTextConfirmPassword"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:background="@drawable/txt_border"
               android:hint="ConfirmPassword"
               android:inputType="textPassword"
               android:textColor="@color/black"
               />

           <Button
               android:id="@+id/btnSignUp"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/home_button_cate3"
               android:drawableTint="@color/white"
               android:gravity="center"
               android:text="Sign Up"
               android:layout_marginTop="15dp"
               android:textColor="#FFFFFF"
               android:textSize="16dp"
               app:backgroundTint="@null"/>

           <Button
               android:id="@+id/btnLogin"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/home_button_cate3"
               android:drawableTint="@color/white"
               android:gravity="center"
               android:text="Login"
               android:layout_marginTop="40dp"
               android:textColor="#FFFFFF"
               android:textSize="16dp"
               app:backgroundTint="@null"  />

           <TextView
               android:id="@+id/txtView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:text="OR"
               android:textAlignment="center"
               android:textColor="#AEA8A8"
               android:textSize="18sp"
            />
           <Button
               android:id="@+id/btnLoginGoogle"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/ic_google__g__logo"
               android:drawableTint="@color/white"
               android:gravity="center"
               android:textColor="#FFFFFF"
               android:layout_marginTop="15dp"
               android:textSize="16dp"
               app:backgroundTint="@null"/>

       </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>